@using Microsoft.AspNetCore.Components.Web
@using DineOn.Models
@using DineOn.Services
@inject MenuItemService menuService



@if (menuService.GetBurger().Any())
{
    <div class="row">
        <div class="clearfix">
            <p class="display-3">Menu</p>
        </div>
    </div>


    <div class="row mb-3">
        <div class="clearfix">
            <h2 class="text-muted">&nbsp;&nbsp;Burgers</h2>
        </div>
    </div>


    <div class="card-columns">

        @foreach (var asset in menuService.GetBurger())
        {
            <div class="card">
                <a @onclick="e => SelectMenuItem(asset.MenuItemId)" data-toggle="modal" data-target="#productModal" class="stretched-link"></a>
                <div class="row no-gutters">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h6><strong>@asset.Name</strong></h6>
                            <div class="text-truncate text-muted">
                                <small>@asset.Description</small>
                            </div>
                            <p>$@asset.Price</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@asset.ImageUrl" class="card-img" alt="...">
                    </div>
                </div>
            </div>
        }
        <br /><br /><br />
    </div>
}
else
{
    <div class="row">
        <div class="clearfix">
            <p class="display-3">Menu</p>
        </div>
    </div>


    <div class="row mb-3">
        <div class="clearfix">
            <h2 class="text-muted">&nbsp;&nbsp;Sorry there are no burgers in our menu at the moment</h2>
        </div>
    </div>
}


@code {
    MenuItem selectedMenuItem;
    int selectedItem;

    void SelectMenuItem(int itemId)
    {
        selectedItem = itemId;
        selectedMenuItem = menuService.GetBurger().First(asset => asset.MenuItemId == itemId);
        GetCurrentRating();
    }

    int currentRating = 0;
    int voteCount = 0;
    string voteLabel;

    void GetCurrentRating()
    {

        if (selectedMenuItem.Ratings == null)
        {
            currentRating = 0;
            voteCount = 0;
        }
        else
        {
            voteCount = selectedMenuItem.Ratings.Count();
            voteLabel = voteCount > 1 ? "Votes" : "Vote";
            currentRating = selectedMenuItem.Ratings.Sum() / voteCount;
        }

        System.Console.WriteLine($"Current rating for {selectedMenuItem.Name}: {currentRating}");
    }

    void SubmitRating(int rating)
    {
        System.Console.WriteLine($"Rating reveived for {selectedMenuItem.Name}:{rating}");
        menuService.AddRating(selectedMenuItem.MenuItemId, rating);
        SelectMenuItem(selectedMenuItem.MenuItemId);
    }

}


<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            @if (selectedMenuItem != null)
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="productTitle">@selectedMenuItem.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-img" style="background-image: url('@selectedMenuItem.ImageUrl');">
                        </div>
                        <div class="card-body">
                            <h5>Description</h5>
                            <p class="card-text">@selectedMenuItem.Description</p>
                            <div class="row">
                                <div class="col-5 h5">Price: @selectedMenuItem.Price</div>
                                <div class="col-7 h5"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    @if (voteCount == 0)
                    {
                        <span>Leave a rating!</span>
                    }
                    else
                    {
                        <span>@voteCount @voteLabel</span>
                    }
                    @for (int i = 1; i < 6; i++)
                    {
                        var currentStar = i;
                        if (i <= currentRating)
                        {
                            <span class="fa fa-star" style="color:gold" @onclick="(e => SubmitRating(currentStar))"></span>
                        }
                        else
                        {
                            <span class="fa fa-star" @onclick="(e => SubmitRating(currentStar))"></span>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>
