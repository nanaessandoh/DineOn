@using Microsoft.AspNetCore.Components.Web
@using DineOn.Data.Models
@using DineOn.Service.Interfaces
@inject IMenuItem MenuService



<div class="card-columns">

    @foreach (var asset in MenuService.GetByCategoryName("Burger"))
    {
        <div class="card">
            <a class="stretched-link" data-toggle="modal" data-target="#menuItemDetail" @onclick="menuItem => SelectProduct(asset.MenuItemId)"></a>
            <div class="row no-gutters">
                <div class="col-md-8">
                    <div class="card-body">
                        <h6><strong>@asset.Name</strong></h6>
                        <div class="text-truncate text-muted">
                            <small>@asset.Description</small>
                        </div>
                        <p>$@asset.Price</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@asset.ImageUrl" class="card-img" alt="...">
                </div>
            </div>
        </div>
    }
</div>

